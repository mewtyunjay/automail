{
  "manifest_version": 3,
  "name": "Gmail Floating Window",
  "version": "1.0",
  "description": "Injects a floating iframe UI into Gmail",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "iframe.html",
        "iframe.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ]
}