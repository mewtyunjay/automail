{
  "manifest_version": 3,
  "name": "Gmail Summarizer",
  "version": "1.0",
  "description": "Adds a button to summarize emails in Gmail.",
  "permissions": [
    "storage",
    "activeTab", 
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}